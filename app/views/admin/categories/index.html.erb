<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>New Category</h1>


<%= form_with(model: Category.new, url: admin_categories_path) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: "category_name", required: true %>
  </div>
  <div class="actions">
    <%= form.submit "Add Category" %>
  </div>
<% end %>

